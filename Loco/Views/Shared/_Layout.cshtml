@using Loco.Localization.Adapters
@inject ILocalizer L

<!DOCTYPE html>
<html lang="@System.Threading.Thread.CurrentThread.CurrentUICulture.Name">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@L["App_Title"] - @ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Loco.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@L["App_Title"]</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@L["Menu_Home"]</a>
                        </li>
                    </ul>

                    <!-- Right side: language switcher + IsAdmin + ADMIN badge + Login/Register -->
                    <div class="d-flex align-items-center">
                        @await Html.PartialAsync("_LanguageSwitcher")

                        @{
                            var isAdmin = Context.Request.Cookies.TryGetValue("Dev-IsAdmin", out var v) && v == "1";
                            }

                        <form asp-controller="Dev" asp-action="Toggle" method="post" class="ms-3" style="margin-right:1cm">
                            @Html.AntiForgeryToken()

                            <div class="form-check">
                                <input class="form-check-input"
                                       type="checkbox"
                                       id="devIsAdminToggle"
                                       name="isAdmin"
                                       value="true"
                                       @(isAdmin ? "checked" : null)
                                       onchange="this.form.submit()" />
                                <label class="form-check-label" for="devIsAdminToggle">IsAdmin</label>
                            </div>

                            <!-- The hidden false must come after the checkbox -->
                            <input type="hidden" name="isAdmin" value="false" />
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                        </form>

                        @if (isAdmin)
                            {
                            <span class="badge text-bg-warning ms-2">ADMIN</span>
                            @* For localized badge, add Dev_AdminBadge key and use: @L["Dev_AdminBadge"] *@
                            }

                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - @L["App_Title"]
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>