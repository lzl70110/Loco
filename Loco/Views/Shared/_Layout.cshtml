@using Loco.Localization.Resources
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Localization
@using System.Security.Claims

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> SharedLocalizer

@{
    // Current UI culture (e.g., "bg-BG" or "en-US")
    var rqf = Context.Features.Get<IRequestCultureFeature>();
    var culture = rqf?.RequestCulture.UICulture.Name ?? "bg-BG";

    // Target after logout (preserve culture)
    var returnUrl = Url.Action("Index", "Home", new { area = "", culture = culture, ui_culture = culture });

    // Localized application title (e.g., „Локо“)
    var appTitle = SharedLocalizer["AppTitle"];

    // Admin flag (claims-based): IsAdmin=true
    var isAdminClaim = User?.Claims?.FirstOrDefault(c => c.Type == "IsAdmin")?.Value;
    bool isAdmin = string.Equals(isAdminClaim, "true", StringComparison.OrdinalIgnoreCase);
    }

<!DOCTYPE html>
<html lang="@culture">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@appTitle - @ViewData["Title"]</title>

    <!-- Styles: bootstrap + site -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/Loco.styles.css" />
</head>
<body>
    <header>
        <!-- Top navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">

                <!-- Brand (go Home and keep culture) -->
                <a class="navbar-brand"
                   asp-controller="Home" asp-action="Index"
                   asp-route-culture="@culture" asp-route-ui_culture="@culture">
                    @appTitle
                </a>

                <!-- Mobile toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Collapsible content -->
                <div class="collapse navbar-collapse" id="mainNav">

                    <!-- Left menu -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Home" asp-action="Index"
                               asp-route-culture="@culture" asp-route-ui_culture="@culture">
                                @SharedLocalizer["Home"]
                            </a>
                        </li>

                        <!-- Locomotives -->
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Locomotives" asp-action="Index"
                               asp-route-culture="@culture" asp-route-ui_culture="@culture">
                                @SharedLocalizer["Locomotives"]
                            </a>
                        </li>

                        <!-- Work Entries -->
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="WorkEntries" asp-action="Index"
                               asp-route-culture="@culture" asp-route-ui_culture="@culture">
                                @SharedLocalizer["WorkEntries"]
                            </a>
                        </li>
                    </ul>

                    <!-- Right: language switch + admin label + identity -->
                    <ul class="navbar-nav ms-auto">
                        <!-- Language switcher -->
                        <li class="nav-item d-flex align-items-center me-2">
                            <partial name="_LanguageSwitcher" />
                        </li>

                        <!-- Admin label: green if admin, otherwise light -->
                        <li class="nav-item d-flex align-items-center me-2">
                            <span class="fw-semibold @(isAdmin ? "text-success" : "text-light")">
                                @SharedLocalizer["Admin"]
                            </span>
                        </li>

                        @* Identity block *@
                        @if (SignInManager.IsSignedIn(User))
                            {
                            <!-- Manage (Hello, username) -->
                            <li class="nav-item">
                                <a class="nav-link text-light"
                                   asp-area="Identity"
                                   asp-page="/Account/Manage/Index"
                                   asp-route-culture="@culture"
                                   asp-route-ui_culture="@culture"
                                   title="@SharedLocalizer["Manage"]">
                                    @SharedLocalizer["Hello"] @User.Identity?.Name!
                                </a>
                            </li>

                            <!-- Logout (POST) -->
                            <li class="nav-item">
                                <form class="form-inline"
                                      method="post"
                                      asp-area="Identity"
                                      asp-page="/Account/Logout"
                                      asp-route-returnUrl="@returnUrl"
                                      asp-route-culture="@culture"
                                      asp-route-ui_culture="@culture">
                                    <button type="submit" class="nav-link btn btn-link text-light">
                                        @SharedLocalizer["Logout"]
                                    </button>
                                </form>
                            </li>
                            }
                        else
                            {
                            <!-- Register -->
                            <li class="nav-item">
                                <a class="nav-link text-light"
                                   asp-area="Identity"
                                   asp-page="/Account/Register"
                                   asp-route-culture="@culture"
                                   asp-route-ui_culture="@culture">
                                    @SharedLocalizer["Register"]
                                </a>
                            </li>

                            <!-- Login -->
                            <li class="nav-item">
                                <a class="nav-link text-light"
                                   asp-area="Identity"
                                   asp-page="/Account/Login"
                                   asp-route-culture="@culture"
                                   asp-route-ui_culture="@culture">
                                    @SharedLocalizer["Login"]
                                </a>
                            </li>
                            }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            <span class="me-2">&copy; @DateTime.Now.Year - @appTitle</span>
        </div>
    </footer>

    <!-- Scripts: bootstrap bundle + site -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>